equest.get('question/selectByPageId/',{\r\n        params:{\r\n          pageId:pageId\r\n        }\r\n      }).then(res=>{\r\n        this.questionList=res.data||[]\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<template>\r\n  <div class=\"main-content\">\r\n    <div class=\"card\">\r\n      <div style=\"display: flex;margin-bottom: 20px\" >\r\n        <div style=\"flex:1\">\r\n         <div  > <span style=\"font-size: 24px;margin-right: 10px\">{{pages.name}}</span>\r\n           <el-tag v-if=\"pages.saved==='否'\">未发布</el-tag>\r\n           <el-tag v-else type=\"success\">已发布</el-tag>\r\n         </div>\r\n        </div>\r\n        <div >\r\n          <el-button type=\"primary\"><i class=\"el-icon-share\"></i>分享</el-button>\r\n          <el-button type=\"info\"><i class=\"el-icon-video-play\"></i>预览</el-button>\r\n          <el-button type=\"success\"><i class=\"el-icon-s-promotion\"></i>发布</el-button>\r\n        </div>\r\n      </div>\r\n      <div style=\"margin-bottom: 20px\">\r\n        <el-button type=\"primary\">新建单选题</el-button>\r\n        <el-button type=\"info\">新建多选题</el-button>\r\n        <el-button type=\"success\">新建填空题</el-button>\r\n      </div>\r\n\r\n      <div>\r\n        <div v-for=\"(item,index) in questionList\" :key=\"item.id\" style=\"margin-bottom: 20px\">\r\n          <div>\r\n            <span style=\"font-weight: bold;margin-right: 5px\" >题目{{index+1}}</span>\r\n            <el-input v-model=\"item.name\" style=\"width: 70%;margin-right: 5px\" @change=\"changeQuestionName(item)\"></el-input>\r\n            <el-tag style=\"margin-right: 5px;color:#2a60c9\" v-if=\"item.type==='单选题'\">{{item.type}}</el-tag>\r\n            <el-tag style=\"margin-right: 5px;color:orange\" v-if=\"item.type==='多选题'\">{{item.type}}</el-tag>\r\n            <el-tag style=\"margin-right: 5px;color:seagreen\" v-if=\"item.type==='填空题'\">{{item.type}}</el-tag>\r\n            <span style=\"color:red;cursor:pointer;font-size: 12px;\"><i class=\"el-icon-delete\"></i>删除</span>\r\n          </div>\r\n          <div style=\"padding-left: 40px\" v-if=\"item.questionItemList?.length\">\r\n            <div v-for=\"(sub,subIndex) in item.questionItemList\" :key=\"sub.id\" style=\"margin: 10px 0\">\r\n              <div>\r\n                <span style=\"margin-right: 5px\" >选项{{subIndex+1}}</span>\r\n                <el-input v-model=\"sub.content\" style=\"width: 50%;margin-right: 5px\"></el-input>\r\n                <span style=\"color:red;cursor:pointer;font-size: 12px;\"><i class=\"el-icon-delete\"></i>删除</span>\r\n\r\n\r\n              </div>\r\n\r\n            </div>\r\n            <div>\r\n              <span style=\"margin-right: 5px;color:#2a609c;\" >新选项</span>\r\n              <el-input v-model=\"item.newContent\" style=\"width: 50%;margin-right: 5px\"></el-input>\r\n              <el-button type=\"primary\" class=\"btn-green\" size=\"mini\">确认添加</el-button>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<style scoped>\r\n\r\n</style>"],"mappings":"AACA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,KAAA;MACAC,YAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;EACA;EACAC,OAAA;IACAC,mBAAAC,QAAA;MACA,IAAAP,IAAA,GAAAQ,IAAA,CAAAC,KAAA,CAAAD,IAAA,CAAAE,SAAA,CAAAH,QAAA;MACA,KAAAI,QAAA,CAAAC,GAAA,qBAAAZ,IAAA,EAAAa,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UACA,KAAAb,IAAA;QACA;UACA,KAAAY,QAAA,CAAAE,KAAA,CAAAJ,GAAA,CAAAK,GAAA;QACA;MACA;IACA;IACAf,KAAA;MACA,IAAAgB,MAAA,QAAAC,MAAA,CAAAC,KAAA,CAAAF,MAAA;MACA,KAAAT,QAAA,CAAAY,GAAA,wBAAAH,MAAA,EAAAP,IAAA,CAAAC,GAAA;QACA,KAAAb,KAAA,GAAAa,GAAA,CAAAd,IAAA;MACA;MAEA,KAAAW,QAAA,CAAAY,GAAA;QACAC,MAAA;UACAJ,MAAA,EAAAA;QACA;MACA,GAAAP,IAAA,CAAAC,GAAA;QACA,KAAAZ,YAAA,GAAAY,GAAA,CAAAd,IAAA;MACA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}